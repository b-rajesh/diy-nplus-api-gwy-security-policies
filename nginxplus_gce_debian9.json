{
    "description": "Create an NGINX Plus Image with App Protect using diy-nginx-plus-api-gateway-security-policies",
    "variables": {
      "machine_type": "f1-micro",
      "region": "australia-southeast1",
      "zone": "australia-southeast1-a",
      "purpose": "nginx-plus-nap-r22",
      "image_family": "debian-9",
      "project_id": "Your-GCP-Project-Id"
    },
    "builders": [
      {
        "name": "ngx-plus",
        "type": "googlecompute",
        "project_id": "{{user `project_id`}}",
        "machine_type": "{{user `machine_type`}}",
        "image_family": "nplus-gwy-nap-debian-9",
        "source_image_family": "{{user `image_family`}}",
        "region": "{{user `region`}}",
        "zone": "{{user `zone`}}",
        "image_description": "NGINX Plus R22 & App Protect on Debian 9",
        "image_name": "{{user `purpose`}}",
        "disk_size": 16,
        "disk_type": "pd-ssd",
        "ssh_username": "nginxplus",
        "tags": ["ngx-plus-nap-r22"]
      }
    ],
    
    "provisioners": [
      {
        "type": "file",
        "source": "etc",
        "destination": "/tmp",
        "only": [
          "ngx-plus"
        ]
      },
      {
        "type": "file",
        "source": "install_nginx.sh",
        "destination": "/tmp/",
        "only": [
          "ngx-plus"
        ]
      },
      {
        "type": "shell",
        "inline": [
            "sudo sh /tmp/install_nginx.sh"
        ]
      }
    ]
  }